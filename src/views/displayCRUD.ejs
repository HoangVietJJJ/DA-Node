<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>

    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .btn-edit {
            background-color: orange;
            outline: none;
            border: none;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-delete {
            background-color: red;
            outline: none;
            border: none;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>

                    <button class="btn-edit" type="button"><a
                            href="./edit-crud?id=<%= dataTable[i].id %>">Edit</a></button>
                    <button class="btn-delete" type="button"> <a
                            href="./delete-crud?id=<%= dataTable[i].id %>">Delete</a></button>

                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>